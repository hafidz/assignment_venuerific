<div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
<div class="card-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "small mb-1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control py-4" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "small mb-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control py-4" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
<div class="card-footer text-center">
  <div class="small">
    <%= link_to "Need an account? Sign up!", new_user_registration_path%>
  </div>
  <hr/>
  <div class="small">
    <%= link_to "Back To Home", root_path%>
  </div>
</div>
      